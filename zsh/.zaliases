#!/usr/bin/env zsh

# Color aliases
alias ls='eza'
alias l='ls --color=auto --group-directories-first'
alias ll='l -alF'
alias la='ll -R'
alias lss='less --use-color --color=d+b --color=P+c --color=u+g'

alias ds='doas'
alias pm='pacman'

# Basic programs
alias dk='docker'
alias g='git'
alias nv='nvim'
alias pe='printenv'

# Misc
mkcd() { mkdir -p "$@"; cd "$@"; }
alias psa='ps aux'
j() { . _j "$@"; }
